<?xml version="1.0"?>
<launch>
  <arg name="robot_name" default=""/> <!-- robot_name for use NAMESPACE -->
  <arg name="side" default="b"/> <!-- "b" = blue side, "r" = red side  -->

    <!-- You can change control program  -->




    <!-- sample program node -->
    <node pkg="burger_war" type="gurakoro_burger.py" name="gurakoro_burger" output="screen">
      <param name="robot_name" value="$(arg side)" />
    </node>

    <!-- END sample program node -->




    <!-- End of your space  -->
</launch>

